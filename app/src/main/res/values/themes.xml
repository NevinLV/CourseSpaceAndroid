<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CourseSpace" parent="Theme.Design.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/lightGray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:statusBarColor" tools:ignore="DuplicateDefinition">@color/lblack</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="RoundedCornerButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn</item>
        <item name="android:colorButtonNormal">#00E676</item>
        <item name="android:colorControlHighlight">#01B65E</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/lblack</item>
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="card" parent="CardView">
        <item name="cardBackgroundColor">@drawable/crd</item>
    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">4dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">5dp</item>
        <item name="contentPaddingLeft">5dp</item>
        <item name="contentPaddingRight">5dp</item>
        <item name="cardBackgroundColor">@color/llblack</item>
        <item name="borderWidth">2dp</item>
    </style>

    <style name="BottomNavigation" parent="Theme.CourseSpace">
        <item name="android:background">@color/lblack</item>
        <item name="itemBackground">@color/lblack</item>
        <item name="itemIconTint">@drawable/bottom_nav_icon_color_selector</item>
        <item name="paddingStart">5dp</item>
        <item name="paddingEnd">5dp</item>

    </style>

    <style name="MyInputViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">4dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">5dp</item>
        <item name="contentPaddingLeft">5dp</item>
        <item name="contentPaddingRight">5dp</item>
        <item name="cardBackgroundColor">@color/lblack</item>
    </style>

</resources>